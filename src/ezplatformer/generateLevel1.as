//creates a new coin located on the specified tile
function createCoin(container:FlxGroup, X:uint,Y:uint):void
{
	var coin:FlxSprite = new FlxSprite(X*8+3,Y*8+2);
	coin.makeGraphic(2,4,0xffffff00);
	container.add(coin);
}
